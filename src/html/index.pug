extends pug/helpers/_pageStructore

//-
  =======================================================
  In this a block for including page or anythings
  =======================================================
block includes
  include pug/helpers/_helpers

//-
  =======================================================
  In this a block we can create a variables for this page
  =======================================================
block variables
  - var Title = "Bondi";
//-
  =======================================================
  In this a block for add CSS file for this page
  =======================================================
block stylesheet
  title #{Title}
  //- Add a logo icon for title bar
  link(rel="shortcut icon", href="imgs/logo.png", type="image/x-icon")
  //- Add Roboto Font From Google Fonts
  link(rel='preconnect' href='https://fonts.googleapis.com')
  link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
  link(href='https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;700;900&display=swap' rel='stylesheet')
  //- Normalize Library
  link(rel="stylesheet", href="css/normalize.css")
  //- Fontawesome Library
  link(rel="stylesheet", href="css/fontawesome.min.css")
  //- Bootstrap Framework
  link(rel="stylesheet", href="css/bootstrap.min.css")
  //- Bondi Style File
  link(rel="stylesheet", href="css/bondi.css")


//-
  ====================================================================================================================
                                              In this a block for page content
  ====================================================================================================================
block content 
  //- ***************************************** Start Nav *****************************************
  nav#navbar.navbar.navbar-expand-lg.sticky-top
    .container-fluid 
      a.navbar-brand(href="#")
        img(src="imgs/logo.png", alt="Bondi Logo")
      button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation")
        span.fa-solid.fa-bars
      #mainNav.collapse.navbar-collapse
        ul.navbar-nav.ms-auto.mb-2.mb-lg-0  
          li.nav-item
            a.nav-link.p-lg-3.p-2.active(aria-current="page", href="#") Home
          li.nav-item
            a.nav-link.p-lg-3.p-2(aria-current="page", href="#") Services
          li.nav-item
            a.nav-link.p-lg-3.p-2(aria-current="page", href="#") Portfolios
          li.nav-item
            a.nav-link.p-lg-3.p-2(aria-current="page", href="#") About
          li.nav-item
            a.nav-link.p-lg-3.p-2(aria-current="page", href="#") Contact
        .search.px-3.d-none.d-lg-block
          i.fa-solid.fa-magnifying-glass 
        a.btn.main-btn.rounded-pill(href="#") Login
  //- ***************************************** End Nav *****************************************

  //- ***************************************** Start Header *****************************************
  header.text-light.d-flex.justify-content-center.align-items-center
